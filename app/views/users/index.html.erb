<div class="section-heading">
  Team Members
</div>
<div class="section-sub-heading">
  Select a team member to view and update
</div>
<div class="section-sub-heading">
  <%= will_paginate @users %>
</div>
<div class="grid-table">
  <div class="grid-table-header">
    <div class="grid-table-header-cell">
      <div class="grid-table-header-icon">
        <i class="fas fa-address-card"></i>
      </div>
      <div class="grid-table-header-text">
        Full Name
      </div>
    </div>
    <div class="grid-table-header-cell">
      <div class="grid-table-header-icon">
        <i class="far fa-envelope"></i>
      </div>
      <div class="grid-table-header-text">
        Email
      </div>
    </div>
    <div class="grid-table-header-cell">
      <div class="grid-table-header-icon">
        <i class="fas fa-hashtag"></i>
      </div>
      <div class="grid-table-header-text">
        Number of Roles
      </div>
    </div>
  </div>
  <% @users.each do |user| %>
    <div class="grid-table-data">
      <div class="grid-table-data-cell">
        <%=
          link_to user.full_name,
          user_path(user),
          class: 'grid-table-data-text pretty-link'
        %>
      </div>
      <div class='grid-table-data-cell'>
        <div class='grid-table-data-text'>
          <%= user.email %>
        </div>
      </div>
      <div class='grid-table-data-cell'>
        <div class='grid-table-data-text'>
          <%= user.number_of_roles %>
        </div>
      </div>
    </div>
  <% end %>
</div>
<div class="section-heading">
  Add Team Members
</div>
<div class="section-sub-heading">
  Enter a last name to search Planning Center
</div>
<%= form_tag search_people_path, remote: true do %>
  <div class="inline-form" style="border:none;">
    <div class="inline-form-label">
      <div class="inline-form-label-icon">
        <i class="fas fa-align-justify"></i>
      </div>
      <%=
        label_tag :last_name,
        'Last Name',
        class: 'inline-form-label-text'
      %>
    </div>
    <%=
      text_field_tag :last_name,
      nil,
      class: 'inline-form-input'
    %>
    <%= submit_tag 'Search', class: 'form-submit-button', onclick: "showSpinner('#search-result')" %>
  </div>
<% end %>
<div id="search-result">
</div>
