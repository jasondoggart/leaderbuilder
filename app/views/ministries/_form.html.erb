<%= form_for @ministry do |f| %>
  <% if @ministry.errors.any? %>
    <div class="form-errors">
      This couldn't be completed because there are
      <%= pluralize(@ministry.errors.count, 'errors') %>.
      Please update the form and try again.
    </div>
    <ul>
      <% @ministry.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>
  <div class="inline-form">
    <div class="inline-form-label">
      <div class="inline-form-label-icon">
        <i class="fas fa-align-justify"></i>
      </div>
      <%=
        f.label :name,
        'Ministry Name',
        class: 'inline-form-label-text'
      %>
    </div>
    <%=
      f.text_field :name,
      class: 'inline-form-input'
    %>
    <div class="inline-form-label">
      <div class="inline-form-label-icon">
        <i class="far fa-user"></i>
      </div>
      <%=
        f.label :director_id,
        'Director',
        class: 'inline-form-label-text'
      %>
    </div>
    <%=
      f.collection_select :director_id,
      @users,
      :id,
      :full_name,
      {},
      {class: 'inline-form-input'}
    %>
  <%= f.submit @ministry.new_record? ? 'Add Ministry' : 'Update Ministry',
    class: 'form-submit-button'%>
  </div>
<% end %>
